@page
@model IndexModel
@{
    ViewData["Title"] = "Cry Wolf";
    ViewData["UseFullBg"] = true;
}

<section class="hero-viewport" id="top">
    <div class="hero-content">
        <div class="hero-copy">
            <h1>We craft games that make people stay.</h1>
            <p class="lede">Play Cry Wolf By Hamon Studio - new RTS</p>
        </div>
        <div class="link-row">
            <a class="link-pill" asp-page="/terms">Terms</a>
            <a class="link-pill" asp-page="/privacy">Privacy</a>
            <a class="link-pill" href="#contact">Contact</a>
        </div>
        <div class="store-row">
            <a class="store-badge google" href="https://play.google.com/store/apps/details?id=com.hamonstudio.crywolf&hl=ko">
                <img src="~/images/GooglePlayBadge.png" alt="Get it on Google Play" />
            </a>
            <a class="store-badge apple" href="https://apps.apple.com/kr/app/id6745862935">
                <img src="~/images/AppStoreBadge.png" alt="Download on the App Store" />
            </a>
        </div>
    </div>
</section>

<section class="shop-placeholder" id="shop">
    <div class="content-max">
        <div class="shop-card">
            <p class="pill">Coming soon</p>
            <h2>Web store goes here.</h2>
            <p class="muted">Scroll space reserved for your shop modules. Add product grids, bundles, and checkout when ready.</p>
        </div>
    </div>
</section>
