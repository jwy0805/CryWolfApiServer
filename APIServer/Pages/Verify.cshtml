@page "{token}"
@model ApiServer.Pages.Verify
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verification</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin-top: 50px;
        }

        .message {
            font-size: 18px;
            color: #333;
        }

        .success {
            color: green;
        }

        .error {
            color: red;
        }
    </style>
</head>
<body>
<div>
    <h1>Email Verification</h1>
    <p class="message @(Model.IsVerified ? "success" : "error")">
        @Model.Message
    </p>
</div>
</body>
</html>